{{!-- edit posts on this page --}}
<article>
  <a href="/posts"> &larr; Back to dashboard</a>

<form class="edit-post-form">
<section class="container edit-post-form box">
  <h1 class="title is-4">
    Edit Post:
  </h2>
    <div class="field">
      <h3 class="title is-3">{{ post.title }}</h3>
    </div>
    <div class="field">
        <textarea  class="textarea is-medium is-link post-text" name="post-text" id="post-text">{{post.post_text}}</textarea>
      </p>
    </div>
    <div class="field">
      by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="field">
      <p class="control">
        <button type="submit" class="button edit-post-form"> save post</button>
        <button type="button" class="button delete-post-btn"> delete post</button>
      </p>
    </div>
</section>
</form>


{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>