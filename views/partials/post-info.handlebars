{{! posts section }}
<section class="field" id="individual-post">
  <article class="post">
    <div class="title posts-page">
      <a href="/post/{{id}}">{{title}}</a>

      <p>{{post_text}}</p>

    </div>
    <div class="meta">
      by
      {{user.username}}
      on
      {{format_date created_at}}
      |
      <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
  </article>
</section>