{{! Main page template }}

<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Meet Up SATX</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    {{!stylesheet for bulma}}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    {{!stylesheet for bulmaswatch theme: cyborg}}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulmaswatch/0.8.1/cyborg/bulmaswatch.min.css"
      integrity="sha512-a4FEuCXHSbNqzAten4lPl5BPgDqOL+yHPg5AWcBRdpBHRVrFfKZ2/cYKnFKRctX1Udaal4E8cchB0+yXnkaPhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    {{!script to add font awesome icons}}
    <script
      src="https://kit.fontawesome.com/6968da061b.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>

    <section class="hero">
      <canvas id="canvas-complex"></canvas>
      <div class="hero-body">
        <nav class="navbar">
          <div class="container">
            <div class="hero-head">
              <p class="is-1" id="Home-Text"><a href="/">Meet Up SATX</a></p>
              <i><p class="subtitle">Get to know San Antonio - created by locals
                  for you
                </p></i>
              <span class="navbar-burger" data-target="navbarMenuHeroB">
                <span></span>
                <span></span>
                <span></span>
              </span>
            </div>
            <div id="navbarMenuHeroB" class="navbar-menu">
              <div class="navbar-end">
                {{#if loggedIn}}
                  <a
                    href="/dashboard"
                    class="button is-link is-inverted is-outlined"
                  >Create | Edit Posts</a>

                  <a
                    href="/events"
                    class="button is-link is-inverted is-outlined"
                  >Add Your Events</a>

                  <a
                    href="/friends"
                    class="button is-link is-inverted is-outlined"
                  >Chat With Friends</a>
                  <a
                    class="button is-link is-inverted is-outlined"
                    id="logout"
                  >Logout</a>
                {{else}}
                  <a
                    class="button is-link is-inverted is-outlined"
                    href="/login"
                    id="login"
                  >Login | Sign Up</a>
                  {{! <a
										class="button is-link is-inverted is-outlined"
										href="/login"
										id="logout2"
									>Logout</a> }}
                {{/if}}
              </div>
            </div>
          </div>
        </nav>
      </div>
    </section>

    <main>

      {{{body}}}
    </main>

    <footer class="footer">
      <div class="content has-text-centered">
        <p>
          <strong>Thanks for visiting!</strong>
          E.M.A&#8482;
        </p>
        {{! privacy policy }}
        <p><a href="/privacy-policy">View Our Privacy Policy and Terms of Use</a></p>

      </div>
    </footer>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/granim/2.0.0/granim.min.js"
      integrity="sha512-CmlPTWm5+a1Gt2YSNk2rGZVvbH3Zge6imS7M4/vrhC8d+A1RcehmLxWMqUdv8aEu7pwfTo74EtnrR+8Cf8KdCA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/granim.js-2.0.0/dist/granim.js"></script>
    <script src="/granim.js-2.0.0/dist/granim.min.js"></script>
    <script src="/javascript/script.js"></script>

  </body>

</html>